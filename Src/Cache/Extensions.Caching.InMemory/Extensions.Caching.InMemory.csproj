<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net10.0</TargetFramework>
		<!-- Required -->
		<Version>10.0.1</Version>
		<Authors>Kamran Tajerbashi</Authors>
		<Description>Collection of useful extensions for .NET 10</Description>
		<!-- Required -->
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<RepositoryUrl>https://github.com/KTajerbashi/Extensions</RepositoryUrl>
		<PackageIcon>icon.png</PackageIcon>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Extensions.Caching.Abstractions" Version="10.0.1" />
		<PackageReference Include="Extensions.Serializers.Abstractions" Version="10.1.0" />
		<PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="10.0.0" />
		<PackageReference Include="Microsoft.Extensions.Configuration" Version="10.0.0" />
		<PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="10.0.0" />
	</ItemGroup>

	<ItemGroup>
		<None Update="icon.png">
			<Pack>true</Pack>
			<!-- Include icon in package -->
			<PackagePath>icon.png</PackagePath>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
	</ItemGroup>


</Project>
