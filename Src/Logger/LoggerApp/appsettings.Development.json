{
  "Logging": {
    "LogLevel": {
      "Default": "Trace",
      "Microsoft.AspNetCore": "Trace"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=Tajerbashi\\TAJERBASHI;Database=LoggerDB;User Id=sa;Password=123123;MultipleActiveResultSets=true;Encrypt=false"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Seq", "Serilog.Sinks.Elasticsearch", "Serilog.Sinks.MSSqlServer" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithProcessId" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/app-.json",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://seq:5341" }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://elasticsearch:9200",
          "indexFormat": "app-logs-{0:yyyy.MM.dd}",
          "autoRegisterTemplate": true
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Server=Tajerbashi\\TAJERBASHI;Database=LoggerDB;User Id=sa;Password=123123;MultipleActiveResultSets=true;Encrypt=false",
          "tableName": "EventLogs",
          "schemaName": "Logger",
          "autoCreateSqlTable": true,
          "columnOptionsSection": {
            "additionalColumns": [
              {
                "ColumnName": "TraceId",
                "DataType": "nvarchar",
                "DataLength": 100
              },
              {
                "ColumnName": "UserAgent",
                "DataType": "nvarchar",
                "DataLength": 500
              },
              {
                "ColumnName": "UserIp",
                "DataType": "nvarchar",
                "DataLength": 100
              },
              {
                "ColumnName": "UserId",
                "DataType": "nvarchar",
                "DataLength": 100
              },
              {
                "ColumnName": "Controller",
                "DataType": "nvarchar",
                "DataLength": 100
              },
              {
                "ColumnName": "Action",
                "DataType": "nvarchar",
                "DataLength": 100
              },
              {
                "ColumnName": "RequestParameters",
                "DataType": "nvarchar",
                "DataLength": -1
              },
              {
                "ColumnName": "ResponseParams",
                "DataType": "nvarchar",
                "DataLength": -1
              }
            ]
          }
        }
      }
    ]
  }

}
