<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net10.0</TargetFramework>
		<!-- Required -->
		<Version>10.0.0</Version>
		<Authors>Kamran Tajerbashi</Authors>
		<Description>Collection of useful extensions for .NET 10</Description>
		<!-- Required -->
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<RepositoryUrl>https://github.com/KTajerbashi/Extensions</RepositoryUrl>
		<PackageIcon>icon.png</PackageIcon>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<ItemGroup>
		<None Update="icon.png">
			<Pack>true</Pack>
			<!-- Include icon in package -->
			<PackagePath>icon.png</PackagePath>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
	</ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging" Version="10.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Extensions.Logger.Abstractions\Extensions.Logger.Abstractions.csproj" />
  </ItemGroup>


</Project>
