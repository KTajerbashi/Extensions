@* AppNavLink.razor *@
@using Microsoft.AspNetCore.Components.Routing

    <NavLink class="app-nav-link" href="@Href" Match="@Match">
        <span class="@IconClass" aria-hidden="true"></span> @Text
    </NavLink>

@code {
    [Parameter] public string Href { get; set; } = "#";
    [Parameter] public string Text { get; set; } = "";
    [Parameter] public string IconClass { get; set; } = ""; // e.g., "bi bi-list-nested-nav-menu"
    [Parameter] public NavLinkMatch Match { get; set; } = NavLinkMatch.All;
}
